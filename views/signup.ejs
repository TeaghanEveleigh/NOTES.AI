<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Notes.ai</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .btn-secondary {
        margin-top: 5px;
        background-color: #6c757d;
        border-color: #6c757d;
        color: #FFF;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-default navbar-shadow">
    <div class="container">
      <div class="navbar-header">
        <!-- Responsive Toggle Button -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">NOTES.AI</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <!-- 6 -->
          <li id="about"><a href="/Get-started">GET STARTED</a></li>
          <li id="contact"><a href="/contact">CONTACT US</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <!-- Rest of the page content -->
  </div>

  <div class="container">
    <h2>Signup</h2>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <form action="/signup" method="POST">
      <div class="form-group">
        <label for="email">Username( Must be  atleast 10 characters)</label>
        <input type="text" class="form-control" id="email" name="email" required minlength="10">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <div class="input-group">
          <input type="password" class="form-control" id="password" name="password" required minlength="8">
          <span class="input-group-addon">
            <input type="checkbox" id="showPasswordCheckbox" onclick="togglePasswordVisibility()">
            Show Password
          </span>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Signup</button>
      <a href="/login" class="btn btn-secondary">Already have an account?</a>
    </form>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Bootstrap JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script>
    function togglePasswordVisibility() {
      var passwordInput = document.getElementById("password");
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
      } else {
        passwordInput.type = "password";
      }
    }
  </script>
</body>

</html>
