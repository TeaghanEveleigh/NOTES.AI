<%- include("partials/header") %>
<body>
    <div class="container">
        <h1>Compose</h1>
        <form action="/compose" method="post">
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="text" name="titleOfPost" autocomplete="off" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Create your own note or prompt AI with a description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" type="text" name="contentOfPost" autocomplete="off"></textarea>
            </div>
            <button class="btn btn-primary mt-5" type="submit" name="action" value="create">Create</button>
            <button class="btn btn-light mt-5" type="submit" name="action" value="generate_ai">Generate AI</button>
        </form>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>


